<div class="skin-blue">
    <div ui-view="top"></div>
    <div ui-view="left"></div>
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header" ng-controller="DocumentController">
            <h1>
                Documents
            </h1>
            <ol class="breadcrumb">
                <li><a href="/admin/#/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="/admin/#/admin/operators"><i class="fa fa-dashboard"></i> Operators</a></li>
                <li>Documents</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content" ng-init="getDocumentList()">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box-body table-responsive">
                        <div class="alert alert-danger alert-dismissable" ng-show="message"><button class="close" aria-hidden="true" data-dismiss="alert" type="button">Ã—</button>{{message}}</div>
                        <div class="box">
                            <!-- <div class="box-header">
                            <h3 class="box-title">Data Table With Full Features</h3>
                        </div> -->
                            <div class="box-body table-responsive">
                                <div class="clearfix" style="padding-bottom:15px;">
                                    <!-- <div style="float:right;"><a href="/admin/#/admin/addeditdocument/{{driverID}}" style="text-align:right">Add New Document</a></div> -->
                                    <form name="searchForm" novalidate ng-submit="applyGlobalSearch()">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button" ng-click="refreshData()">
                                                    <span class="glyphicon glyphicon-refresh"></span>
                                                </button>
                                            </span>
                                            <input type="text" class="form-control" placeholder="Search term" name="searchTerm" ng-model="globalSearchTerm" required />
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="submit">
                                                    <span class="glyphicon glyphicon-search"></span>
                                                </button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                                <form role="form">
                                    <table id="example1" class="table table-bordered table-striped" ng-table="tableParams" show-filter="isFiltersVisible">
                                        <colgroup>
                                            <col width="5%"/>                                
                                            <col width="15%"/>
                                            <col width="25%"/>
                                            <col width="25%"/>
                                            <!-- <col width="30%"/> -->
                                            <!-- <col width="15%"/> -->
                                            <!-- <col width="15%"/> -->
                                        </colgroup>
<!--                                        <tr class="row-color" ng-if="!$data.length">
                                            <td>No data Found.</td>
                                        </tr>-->
                                        <tr ng-repeat = "document in $data">
                                            <td header="'headerCheckbox.html'"><input type='checkbox' ng-model="checkboxes.items[document._id]" value="{{document._id}}" /></td>
                                            
                                            <td data-title="'Status'" sortable="'enable'" align='left'><div ng-if="document.status == 'approved'"><img src='/img/enable.png' border='0' title="Approved"></div><div ng-if="document.status == 'pending'"><img src='/img/pending.png' border='0' title="Pending"></div><div ng-if="document.status == 'decline'"><img src='/img/disable.png' border='0' title="Declined"></div></td>

                                            <td data-title="'Type'" sortable="'type'" filter="{type:'text'}" align="left">{{document.type}}</td>

                                            <td data-title="'Image'" align="left"><a href="">
                                                    <img ng-src="{{document.path}}" ng-click="open([document.path])" class="image-50"/></a>
                                            </td>

                                            <td data-title="'Decline Comment'" align="left">{{document.decline_comment}}</td>

                                        </tr>
                                        <tr ng-hide="!$scope.recordFetchedLength">
                                            <td colspan="5">No Result Found!</td>
                                        </tr>
                                        <tr ng-show="!$scope.recordFetchedLength">
                                            <td colspan='2'>
                                                <div class="form-group">
                                                    <select class="form-control" name='selectAction' id='selectAction'>
                                                        <option value="">Select</option>    
                                                        <option value="approve">Approve</option>
                                                        <option value="decline">Decline</option>
                                                        <option value="delete">Delete</option>
                                                    </select>
                                                </div>
                                            </td>
                                            <td colspan='3'><input type='button' name='go' value='Go' class='btn btn-primary' ng-click="performAction()"></td>
                                            <!-- <td>
                                                <ul class="pagination" style="float:right">
                                                    <li><a ng-click="getDriverList(currentPage-1)"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                                                    <li ng-repeat="page in pagesCount" ng-class="{'active': currentPage == page}"><a ng-click="getDriverList(page)">{{page}}</a></li>
                                                    <li><a ng-click="getDriverList(currentPage+1)"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                                                </ul>
                                            </td> -->
                                        </tr>
                                    </table>

                                </form>

                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
</div>

<!-- page script -->
<script type="text/ng-template" id="headerCheckbox.html">
    <input type="checkbox" ng-model="checkboxes.checked" class="select-all" value="" />
</script>