<div class="skin-blue">
    <div ui-view="top"></div>
    <div ui-view="left"></div>
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header" ng-controller="PreferenceController">
            <h1>
                Preferences
            </h1>
            <ol class="breadcrumb">
                <li><a href="/#/home"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="/admin/#/admin/preferences">Preferences</a></li>
                <li>Edit</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content" ng-init="getPreference()">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Edit preferences</h3>
                        </div>
                        <div class="box-body table-responsive">
                            <div class="alert alert-danger alert-dismissable" ng-show="message"><button class="close" aria-hidden="true" data-dismiss="alert" type="button">Ã—</button>{{message}}</div>
                            <form role="form" class="form-horizontal" name="myForm" ng-submit="addPreference(preference)">
                                <div class="box-body">
                                    <div class="form-field">
                                        <div class="form-group">
                                            <label class="control-label col-xs-4">Bidding Time Limit</label>
                                            <div class="col-xs-6">
                                                <div class="input-group">
                                                    <select ng-model="preference.bidding_time_limit" name="bidding_time" class="form-control" ng-options="opt for opt in options.hstep" ng-change="setCar(preference.bidding_time_limit);">
                                                    </select>  
                                                    <span class="input-group-addon">Hours</span>
                                                </div>
                                            </div>                        
                                        </div>                                
                                        <div class="form-group">         
                                            <label>Customer Acceptance Time</label>
                                            <div class="form-group">
                                                <label class="control-label col-xs-4">Less than 2 Days</label>
                                                <div class="col-xs-6">
                                                    <div class="input-group">
                                                        <select ng-model="preference.bidding_acceptance_time.less_than_2_days" name="acceptance_time" class="form-control" ng-options="opt for opt in options.hstep" ng-change="setCar(preference.bidding_acceptance_time);">
                                                        </select>  
                                                        <span class="input-group-addon">Hours</span>
                                                    </div>
                                                </div>                        
                                            </div>    
                                            <div class="form-group">
                                                <label class="control-label col-xs-4">Between 3-4 Days</label>
                                                <div class="col-xs-6">
                                                    <div class="input-group">
                                                        <select ng-model="preference.bidding_acceptance_time.between_3_4_days" name="acceptance_time" class="form-control" ng-options="opt for opt in options.hstep" ng-change="setCar(preference.bidding_acceptance_time);">
                                                        </select>  
                                                        <span class="input-group-addon">Hours</span>
                                                    </div>
                                                </div>                        
                                            </div>   
                                            <div class="form-group">
                                                <label class="control-label col-xs-4">More than 4 Days</label>
                                                <div class="col-xs-6">
                                                    <div class="input-group">
                                                        <select ng-model="preference.bidding_acceptance_time.more_than_4_days" name="acceptance_time" class="form-control" ng-options="opt for opt in options.hstep" ng-change="setCar(preference.bidding_acceptance_time);">
                                                        </select> 
                                                        <span class="input-group-addon">Hours</span>
                                                    </div>
                                                </div>                        
                                            </div> 
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-xs-4">Commission rate</label>
                                            <div class="col-xs-6">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="commission_rate" name='commission_rate' ng-model="preference.commission_rate" placeholder="Enter Commission rate" value="{{commission_rate}}" required>
                                                    <span ng-show="myForm.commission_rate.$touched && myForm.commission_rate.$invalid" class="error">This field is required.</span>
                                                    <span class="input-group-addon">%</span>
                                                </div>
                                            </div>                        

                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-xs-4">Mark Up Bid rate</label>
                                            <div class="col-xs-6">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="bid_rate" name='bid_rate' ng-model="preference.markup_bid_rate" placeholder="Enter Bid rate" value="{{markup_bid_rate}}" required>
                                                    <span ng-show="myForm.bid_rate.$touched && myForm.bid_rate.$invalid" class="error">This field is required.</span>
                                                    <span class="input-group-addon">%</span>                                        
                                                </div>
                                            </div>                        
                                        </div>
                                    </div><!-- /.form-field -->                           
                                </div><!-- /.box-body -->
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary" ng-disabled="myForm.$invalid">Submit</button>
                                </div>
                            </form>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
</div>