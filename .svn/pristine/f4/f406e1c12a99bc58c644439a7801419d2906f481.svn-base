<header class="navbar navbar-inverse navbar-fixed-top navtopheader" role="header-top" data-spy="affix" data-offset-top="60">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button"class="navbar-toggle collapsed"data-toggle="collapse"data-target="#navbar"aria-expanded="false" aria-controls="navbar"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
            <a class="navbar-brand" href="#"> <span class="logo"> <img src="img/Travel-logo.png" alt=""> </span> </a> </div>
        </div>
    </header>
    <section class="merchant-sec">
        <div class="container-fluid" ng-controller="ForgotPasswordController">
            <toast></toast>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-container">
                        <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
                        <img src="img/Travel-logo.png" alt="">
                        <p id="profile-name" class="profile-name-card"></p>
                        <form class="form-signin" name="forgetPassword" ng-submit="forgotPassword()">
                            <div class="rdBtns">
                                <p class="forgot">Forgot Password</p>
                            </div>

                                    <div id="remember" class="checkbox"><label>* Mandatory Fields</label></div>
                                    <span id="reauth-email" class="reauth-email"></span>
                                    <span ng-show="forgetPassword.email.$touched && forgetPassword.email.$invalid" class="error fl">This field is required.</span>
                                    <input type="email" id="inputEmail" ng-model="user.email" class="form-control" placeholder="Username/ Email Address *" name="email" required autofocus>
                                    <div class="clear"></div>
                                    <button ng-disabled="forgetPassword.$invalid"  type="submit" class="btn btn-lg btn-primary btn-block btn-signin sign-width" >
                                        <span id="btn-text">Submit</span>
                                    </button>
                                        </form>
                                        <br/>
                                        <!-- /form -->
                                        <a ng-click="goToLogin()" class="fr">Login</a> </div>
                                        <div class="clear"></div>
                                        <!-- /card-container -->
                                    </div>
                                </div>
                            </div>
                        </section>
